!!!
%html{html_attrs}
  %head
    = title_tag
    %meta{"http-equiv"=>"Content-type", :content=>"text/html; charset=utf-8"}
    = yield(:head)
  %body
    #container
      #header
        = render "shared/header"
      #main-content
        - if show_title?
          %h2= h yield(:title)
        = render "shared/flash", :flash => flash
        = yield
      #sidebar
        = yield :sidebar
      
